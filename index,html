      margin-top: 20px;
    }
    .player-setup {
      margin-bottom: 20px;
    }
    .player-info {
      margin-bottom: 10px;
    }
    input[type="text"], input[type="file"] {
      margin: 5px;
      padding: 8px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      margin: 10px;
      cursor: pointer;
      border: none;
      background: #007bff;
      color: white;
      border-radius: 5px;
      transition: 0.3s;
    }
    button:hover {
      background: #0056b3;
    }
    .board {
      display: grid;
      grid-template-columns: repeat(3, 120px);
      grid-gap: 8px;
      justify-content: center;
      margin: 20px auto;
    }
    .cell {
      width: 120px;
